@page
@model MiniShopRazorApp.Pages.Companies.IndexModel
@{
    Layout = "_Layout";
}
<h1>Companies List</h1>
<a class="btn btn-success" asp-page="create">
    Add New
</a>
<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.companies)
        {
            <tr>
                <td>  @item.Id</td>
                <td> @item.Name</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">

                        Edit
                    </a>
                </td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@item.Id">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this company?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>

        }
    </tbody>



</table>